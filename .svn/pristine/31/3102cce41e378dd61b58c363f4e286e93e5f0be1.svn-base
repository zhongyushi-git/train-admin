<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>成绩管理</title>
		<link rel="stylesheet" href="../../js/element/index.css">
		<script src="../../js/vue/vue.js"></script>
		<script src="../../js/vue/axios.min.js"></script>
		<script src="../../js/element/index.js"></script>
		<style>
			.text-title{
				line-height: 32px;
				float: right;
			}
			.right{
				float: right;
			}
			.el-form-item {
			    margin-bottom: 10px;
			}
			.el-dialog__body {
			    padding: 10px 20px;
			}
			.el-table td, .el-table th{
				text-align: center;
			}
		</style>
	</head>
	<body>
		<div id="app">
			<!-- 搜索栏 -->
			<el-row>
					<el-col :span="3">
						<span class="text-title">学期：</span>
					</el-col>
					<el-col :span="3">
						<el-select size="small" v-model="json.term_id" placeholder="请选择"  @change="getPlanList">
							<el-option 
								v-for="item in term_options" 
								:key="item.term_id" 
								:label="item.term" 
								:value="item.term_id">
							</el-option>
						</el-select>
					</el-col>
					<el-col :span="3">
						<span class="text-title">实训名称：</span>
					</el-col>
					<el-col :span="3">
						<el-select size="small" v-model="json.id" placeholder="请选择">
							<el-option 
								v-for="item in planList" 
								:key="item.id" 
								:label="item.train_name" 
								:value="item.id">
							</el-option>
						</el-select>
					</el-col>
					<el-col :span="3">
						<span class="text-title">班级：</span>
					</el-col>
					<el-col :span="3">
						<el-select size="small" v-model="json.class_id" placeholder="请选择">
							<el-option 
								v-for="item in class_options" 
								:key="item.class_id" 
								:label="item.class_name" 
								:value="item.class_id">
							</el-option>
						</el-select>
					</el-col>
				</el-row><br>
				<el-row>
					<el-col :span="3">
						<span class="text-title">姓名：</span>
					</el-col>
					<el-col :span="3">
						<el-input size="small" v-model="json.name" placeholder="请输入姓名"></el-input>
					</el-col>
					<el-col :span="3">
						<span class="text-title">学号：</span>
					</el-col>
					<el-col :span="3">
						<el-input size="small" v-model="json.sno" placeholder="请输入学号"></el-input>
					</el-col>
					<el-col :span="7">
						&nbsp;&nbsp;
						<el-button type="primary" size="small" @click="search(0)">查询</el-button>
						<el-button type="warning" size="small" @click="clear">重置</el-button>
						<el-button type="success" size="small" @click="updateInfo">修改</el-button>
						<el-button type="danger" size="small" @click="checkDel">删除</el-button>
						<el-button type="info" size="small" @click="beforeSubmit">提交</el-button>
					</el-col>
				</el-row>
			<br>
			<!-- 表格栏 -->
			<el-row>
					<el-table 
					      ref="multipleTable"
					      :data="datas"
						  stripe
						  border
						  max-height="380px"
						  size="small"
						  @selection-change="handleSelectionChange"
						  @row-click="handleRowClick"
					      style="width: 100%">
						  <el-table-column
						    type="selection"
						    width="55">
						  </el-table-column> 
						  <el-table-column
					        prop="sno"
					        label="学号">
					      </el-table-column>
					      <el-table-column
					        prop="name"
					        label="姓名">
					      </el-table-column>
						  <el-table-column
						    prop="classes"
						    label="班级">
						  </el-table-column>
						  <el-table-column
							v-if="false"
						  	prop="term_id"
						  	label="学期" >
						  </el-table-column>
						  <el-table-column
							prop="reply_score"
							label="答辩成绩"
							:formatter="formatReplyScore">
						  </el-table-column>
						  <el-table-column
						  	prop="train_score"
						  	label="实训成绩"
							:formatter="formatTrainScore">
						  </el-table-column>
						 <el-table-column
						   prop="all_score"
						   label="综合成绩"
						   :formatter="formatAllScore">
						 </el-table-column>
						 <el-table-column
						   prop="all_status"
						   label="综合成绩提交状态"
						   :formatter="formatAllStatus">
						 </el-table-column>
					</el-table>
				</el-row>
			<!-- 分页 -->
			<el-row>
					<el-pagination
						@size-change="handleSizeChange"
					    @current-change="handleCurrentChange"
					    :current-page="1"
					    :page-sizes="[10,20,50,100]"
					    :page-size="10"
					    layout="total, sizes, prev, pager, next, jumper"
					    :total="total">
					</el-pagination>
			</el-row>
			
			<!-- 弹框 -->
			<el-dialog title="修改学生成绩" :visible.sync="dialogVisible" width="30%">
			  <el-form :label-position="labelPosition" :model="form" label-width="100px" >
				 <el-form-item label="id" v-if="false">
				   <el-input size="small" v-model="form.term_id" :disabled="true"></el-input>
				</el-form-item>
			    <el-form-item label="学号:">
			      <el-input size="small" v-model="form.sno" :disabled="true"></el-input>
			    </el-form-item>
			    <el-form-item label="答辩成绩:">
				<el-input size="small" v-model="form.reply_score"></el-input>
			    </el-form-item>
				<el-form-item label="实训成绩:">
				  <el-input size="small" v-model="form.train_score"></el-input>
				</el-form-item>
				<el-form-item label="综合成绩:" v-if="false">
				  <el-input size="small" v-model="form.all_score"></el-input>
				</el-form-item>
				<el-form-item label="是否提交:" v-if="false">
				  <el-input size="small" v-model="form.all_status"></el-input>
				</el-form-item>
			  </el-form>
			  <div slot="footer" class="dialog-footer">
			    <el-button size="small" @click="dialogVisible = false">取 消</el-button>
			    <el-button type="primary" size="small" @click="saveForm">确 定</el-button>
			  </div>
			</el-dialog>
		</div>	
	</body>
	<script src="../../js/config/config.js"></script>
	<script src="../../js/config/tool.js"></script>
	<script src="../js/score-manage.js"></script>
</html>
