<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>考勤信息管理</title>
    <link rel="stylesheet" href="../../js/element/index.css">
    <script src="../../js/vue/vue.js"></script>
    <script src="../../js/vue/axios.min.js"></script>
    <script src="../../js/element/index.js"></script>
    <style>
        .text-title {
            line-height: 32px;
            float: right;
        }

        .right {
            float: right;
        }

        .el-form-item {
            margin-bottom: 10px;
        }

        .el-dialog__body {
            padding: 10px 20px;
        }

        .el-table td, .el-table th {
            text-align: center;
        }
    </style>
</head>
<body>
<div id="app">
    <!-- 搜索栏 -->
    <el-row>
        <el-col :span="2">
            <span class="text-title">学期：</span>
        </el-col>
        <el-col :span="3">
            <el-select size="small" v-model="json.term_id" placeholder="请选择" @change="getPlanList">
                <el-option
                        v-for="item in term_options"
                        :key="item.term_id"
                        :label="item.term"
                        :value="item.term_id">
                </el-option>
            </el-select>
        </el-col>
        <el-col :span="2">
            <span class="text-title">实训名称：</span>
        </el-col>
        <el-col :span="3">
            <el-select size="small" v-model="json.id" placeholder="请选择">
                <el-option
                        v-for="item in planList"
                        :key="item.id"
                        :label="item.train_name"
                        :value="item.id">
                </el-option>
            </el-select>
        </el-col>
        <el-col :span="2">
            <span class="text-title">考勤时间：</span>
        </el-col>
        <el-col :span="7">
            <el-date-picker
                    size="small"
                    value-format="yyyy-MM-dd HH:mm:ss"
                    v-model="json.times"
                    type="datetimerange"
                    range-separator="至"
                    start-placeholder="开始时间"
                    end-placeholder="结束时间">
            </el-date-picker>
        </el-col>
    </el-row>
    <br>
    <el-row>
        <el-col :span="2">
            <span class="text-title">班级：</span>
        </el-col>
        <el-col :span="3">
            <el-select size="small" v-model="json.class_id" placeholder="请选择">
                <el-option
                        v-for="item in class_options"
                        :key="item.class_id"
                        :label="item.class_name"
                        :value="item.class_id">
                </el-option>
            </el-select>
        </el-col>
        <el-col :span="2">
            <span class="text-title">姓名：</span>
        </el-col>
        <el-col :span="3">
            <el-input size="small" v-model="json.name" placeholder="请输入姓名"></el-input>
        </el-col>
        <el-col :span="2">
            <span class="text-title">学号：</span>
        </el-col>
        <el-col :span="3">
            <el-input size="small" v-model="json.sno" placeholder="请输入学号"></el-input>
        </el-col>
        <el-col :span="1">&nbsp;</el-col>
        <el-col :span="8">
            <el-button type="primary" size="small" @click="search(0)">查询</el-button>
            <el-button type="warning" size="small" @click="clear">重置</el-button>
            <el-button type="success" size="small" @click="updateInfo">修改</el-button>
            <el-button type="danger" size="small" @click="checkDel">删除</el-button>
            <el-button type="success" size="small" @click="tableAnalysis">表格分析</el-button>
            <!-- <el-button type="warning" size="small" @click="">图形分析</el-button> -->
        </el-col>
    </el-row>
    <br>
    <!-- 表格栏 -->
    <el-row>
        <el-table
                ref="multipleTable"
                :data="datas"
                stripe
                border
                max-height="380px"
                size="small"
                @selection-change="handleSelectionChange"
                @row-click="handleRowClick"
                style="width: 100%">
            <el-table-column
                    type="selection"
                    width="55">
            </el-table-column>
            <el-table-column
                    v-if="false"
                    prop="attend_id"
                    label="id">
            </el-table-column>
            <el-table-column
                    prop="sno"
                    label="学号">
            </el-table-column>
            <el-table-column
                    prop="name"
                    label="姓名">
            </el-table-column>
            <el-table-column
                    prop="classes"
                    label="班级">
            </el-table-column>
            <el-table-column
                    prop="attend_time"
                    label="考勤时间">
            </el-table-column>
            <el-table-column
                    prop="attend_teacher"
                    label="考勤者">
            </el-table-column>

            <el-table-column
                    prop="attend_addr"
                    label="考勤地点">
            </el-table-column>
            <el-table-column
                    prop="attend_remark"
                    label="备注">
            </el-table-column>
        </el-table>
    </el-row>
    <!-- 分页 -->
    <el-row>
        <el-pagination
                @size-change="handleSizeChange"
                @current-change="handleCurrentChange"
                :current-page="1"
                :page-sizes="[10,20,50,100]"
                :page-size="10"
                layout="total, sizes, prev, pager, next, jumper"
                :total="total">
        </el-pagination>
    </el-row>

    <!-- 弹框 -->
    <el-dialog title="修改学生考勤信息" :visible.sync="dialogVisible" width="30%">
        <el-form :label-position="labelPosition" :model="form" label-width="100px">
            <el-form-item label="id" v-if="false">
                <el-input size="small" v-model="form.attend_id" :disabled="true"></el-input>
            </el-form-item>
            <el-form-item label="学号:">
                <el-input size="small" v-model="form.sno" :disabled="true"></el-input>
            </el-form-item>
            <el-form-item label="考勤时间:">
                <el-date-picker
                        style="width: 100%;"
                        size="small"
                        v-model="form.attend_time"
                        type="datetime"
                        value-format="yyyy-MM-dd HH:mm:ss"
                        placeholder="选择日期时间">
                </el-date-picker>
            </el-form-item>
            <el-form-item label="考勤者:">
                <el-input size="small" v-model="form.attend_teacher"></el-input>
            </el-form-item>
            <el-form-item label="考勤地点:">
                <el-input size="small" v-model="form.attend_addr"></el-input>
            </el-form-item>
            <el-form-item label="备注:">
                <el-input size="small" type="textarea" rows="3" v-model="form.attend_remark"></el-input>
            </el-form-item>
        </el-form>
        <div slot="footer" class="dialog-footer">
            <el-button size="small" @click="dialogVisible = false">取 消</el-button>
            <el-button type="primary" size="small" @click="saveForm">确 定</el-button>
        </div>
    </el-dialog>
    <el-dialog title="分析考勤信息" :visible.sync="dialogVisibleAnalysis" width="40%">
        <div style="height: 270px;">
            <el-table
                    ref="multipleTable"
                    :data="analysisData"
                    stripe
                    border
                    max-height="240px"
                    size="small"
                    style="width: 100%">
                <el-table-column
                        prop="time"
                        label="考勤日期">
                </el-table-column>
                <el-table-column
                        prop="sno"
                        label="学号">
                </el-table-column>
                <el-table-column
                        prop="name"
                        label="姓名">
                </el-table-column>
                <el-table-column
                        prop="count"
                        label="考勤次数">
                </el-table-column>
            </el-table>
            <el-row>
                <el-pagination
                        @size-change="handleSizeChange2"
                        @current-change="handleCurrentChange2"
                        :current-page="1"
                        :page-sizes="[5,10,20]"
                        :page-size="5"
                        layout="total, sizes, prev, pager, next, jumper"
                        :total="total2">
                </el-pagination>
            </el-row>
        </div>
    </el-dialog>
</div>
</body>
<script src="../../js/config/config.js"></script>
<script src="../../js/config/tool.js"></script>
<script src="../js/attend-manage.js"></script>
</html>
